import random
import string

def generate_password(length, complexity):
    # Define character sets
    lowercase = string.ascii_lowercase
    uppercase = string.ascii_uppercase
    digits = string.digits
    symbols = string.punctuation
    
    # Choose complexity level
    if complexity == 1:
        characters = lowercase
    elif complexity == 2:
        characters = lowercase + uppercase
    elif complexity == 3:
        characters = lowercase + uppercase + digits
    elif complexity == 4:
        characters = lowercase + uppercase + digits + symbols
    else:
        return "Invalid complexity choice."
    
    # Generate password
    password = ''.join(random.choice(characters) for _ in range(length))
    return password

def main():
    print("üîê Password Generator")
    length = int(input("Enter desired password length: "))
    
    print("\nChoose complexity level:")
    print("1. Lowercase only")
    print("2. Lowercase + Uppercase")
    print("3. Letters + Digits")
    print("4. Letters + Digits + Symbols")
    
    complexity = int(input("Enter your choice (1-4): "))
    
    password = generate_password(length, complexity)
    print("\nYour generated password is:", password)

# Run the program
if __name__ == "__main__":
    main()
